{
  "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
